
<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-3">
                <h3>Listing Details: </h3>
            </div>
            <div class="show-card col-6 offset-3">
                <img src="<%= listing.image %>" class="card-img-top show-img">
                <div class="card-body">
                    <p class="card-text">
                        <b>
                            <%= listing.title %>
                        </b> <br>
                        <%= listing.description %> <br>
                            &#8377;<%= listing.price.toLocaleString("en-IN")%> <br>
                                <%= listing.location %> <br>
                                    <%= listing.country%> <br>
                    </p>
                </div>
            </div>
        </div>
        <div class="show-btns mb-2">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark offset-3 col-1">Edit</a>
            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-dark offset-5 ">Delete</button>
            </form>


        </div>
    

        <!-- reviews section -->
        
       <div class="col-6 offset-3 mb-3">
        <hr>
        <h4>Leave a Review</h4>
         <form action="/listings/<%= listing.id %>/reviews" method="POST">
            <div class="mt-3 mb-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" min="1" max="5" name="reviews[rating]" class="form-range" id="rating">
               </div>
                <div class="mt-3 mb-3 ">
                 <label for="comment" class="form-label">Comments:</label>
                <textarea name="reviews[comment]" id="comment" cols="30" rows="5"  name="review"
                class="form-control"></textarea>
                </div>
                <div class="btn btn-outline-dark">Submit</div>
         </form>
       </div>

    </body>